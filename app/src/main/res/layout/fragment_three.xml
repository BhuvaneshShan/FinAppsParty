<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.androidhive.materialtabs.fragments.OneFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="20dp"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Authorization Type"
            android:id="@+id/textView10"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GPS"
                android:id="@+id/GPS"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="If your and Vendor&apos;s GPS coordinates match, the transaction is automatically processed! "
                android:id="@+id/textView11"
                android:paddingLeft="30dp"
                android:paddingRight="10dp"
                android:paddingBottom="20dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VolumeKeyPress"
                android:id="@+id/VolumeKeyPress"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Approve transaction by pressing any volume button. Transaction is declined if no volume key press is detected in 15 seconds."
                android:id="@+id/textView12"
                android:paddingLeft="30dp"
                android:paddingRight="10dp"
                android:paddingBottom="20dp" />
        </RadioGroup>


    </LinearLayout>
</RelativeLayout>